{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node", "./src/types/fastify.d.ts"],
  },
  "include": [
    "src/**/*.ts",
    "src/types/**/*.d.ts"
  ]
}
